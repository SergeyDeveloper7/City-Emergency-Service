<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dp" />
            <stroke android:width="3dip" android:color="@color/colorMainPrimary" />
            <solid android:color="@color/materialYellow"/>
            <corners
                android:bottomRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="3dip" android:color="@color/materialYellow" />
            <solid android:color="@color/materialYellow"/>
            <corners
                android:bottomRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <solid android:color="@color/materialYellow"/>
            <corners
                android:bottomRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"/>
        </shape>
    </item>
</selector>