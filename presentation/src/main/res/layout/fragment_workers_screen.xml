<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/materialBlue"
    tools:context="com.sergeydeveloper7.cityemergencyservice.view.fragments.WorkersScreenFragment">

    <TextView
        android:id="@+id/noBidsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/workers_screen_no_bids"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bidsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginNormal"
        />

    <ProgressBar
        android:id="@+id/workersProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/workersBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/materialBlue"
        app:itemBackground="@color/materialBlue"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/workers_bottom_navigation_menu"
        />

</RelativeLayout>
